doctype html
html
  head
    title= title
    block bootstrapsBlock
    link(rel="stylesheet", href="http://localhost:8080/stylesheets/style.css")
    script(src="http://localhost:8080/javascripts/script.js") 
  body(style="min-height:1500px;")
    block header
    .content.container
        -var allblog=blogs.length == 0 ? [] : blogs
        if allblog.length == 0
          div.border.d-flex.flex-row.justify-content-center.align-items-center(style="width:100%;height:468px")
            div.spinner-grow.text-muted
            div.spinner-grow.text-primary
            div.spinner-grow.text-success
            div.spinner-grow.text-info
            div.spinner-grow.text-warning
            div.spinner-grow.text-danger
            div.spinner-grow.text-secondary
            div.spinner-grow.text-dark
            div.spinner-grow.text-light 
        else
            each blog in blogs
              .card.rounded-0.my-3.border-0(id=blog.title)
                .card-header.bg-white.pl-0
                    h1.card-title.responsive-title=blog.title
                img.w-100(src=blog.image alt="Card image")
                .card-content.shadow-sm.p-2 
                    div.d-flex.flex-row.justify-content-between.align-items-center
                      div
                        small.quick-sand-font='Author : '+blog.author
                        br
                        small.quick-sand-font.text-capitalize='Category : '+blog.category
                        br
                        small.quick-sand-font='Date : '+blog.created_at
                      div.d-flex.flex-row.justify-content-between.align-items-center(style="width:250px")
                        a.btn(href="") 
                         i.fa.fa-facebook-official(style="font-size:26px;color:#1877F2")
                        a.btn(href="") 
                         i.fa.fa-whatsapp(style="font-size:26px;color:#06D755")
                        a.btn(href="") 
                         i.fa.fa-twitter(style="font-size:26px;color:#5DA9DD")
                    div 
                      hr
                      div.blog-content(content=blog.content)
                      script.
                        $('.blog-content').each(function(){
                          var content = $(this).attr('content');
                          $(this).html(content);
                        })